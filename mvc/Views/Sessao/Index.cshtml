@model IEnumerable<mvc.Models.SessaoModel>

@{
    ViewData["Title"] = "Sessões";
}

<div class="row">
    <div class="col-md-10">
        <h1>Sessões</h1>
        <p><a asp-action="Create">Criar nova</a></p>
    </div>
    <div class="col-md-2">
        <form  method="post" style="text-align: center;">
            <div class="form-group">
                <label  for="Nome" class="control-label">nome</label>
               <input type="text" id="Nome" name="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label  for="Local" class="control-label">local</label>
               <input type="text" id="Local" name="Local" class="form-control" />
            </div>
            <div class="form-group">
                <label  for="Data" class="control-label">data</label>
               <input type="date" id="Data" name="Data" class="form-control" />
            </div>
            <div class="button">
                <br><button type="submit" class="btn btn-primary">filtar eventos</button>
            </div>
        </form>
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data) e 
                hora
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.assentos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.evento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data) | 
                @Html.DisplayFor(modelItem => item.hr_inicio) - 
                @Html.DisplayFor(modelItem => item.hr_fim)
            </td>
            <td>
                R$: 
                @Html.DisplayFor(modelItem => item.preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assentos)
            </td>
            <td style="text-align: right;">
                <a asp-action="Buy" asp-route-id="@item.Id">Comprar</a> - 
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
            </td>
        </tr>
}
    </tbody>
</table>
