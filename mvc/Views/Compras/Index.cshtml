@model IEnumerable<mvc.Models.SessaoModel>

@{
    ViewData["Title"] = "Relatórios";
}

<div class="row">
    <div class="col-md-9">
        <h1>Relatórios</h1>
    </div>
    <div class="col-md-3">
        <form  method="post" style="text-align: center;">
            <h5><strong>filtrar por faturamento</strong></h5>
            <div class="form-group">
                <label  for="Nome" class="control-label">faturamento/sessao</label>
               <input type="text" id="Nome" name="Nome" class="form-control" />
            </div>
            <div class="form-group">
                <label  for="Data" class="control-label">faturamento/data</label>
               <input type="date" id="Data" name="Data" class="form-control" style="text-align: center;"/>
            </div>
            <div class="button">
                <br><button type="submit" class="btn btn-primary">filtar</button>
            </div>
        </form>
    </div>
</div>

<br><h3>Sessões disponíveis</h3>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.evento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.local)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.preco)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.assentos)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.evento)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.local)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.data) 
            </td>
            <td>
                R$: 
                @Html.DisplayFor(modelItem => item.preco)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.assentos)
            </td>
            <td style="text-align: right;">
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> 
            </td>
        </tr>
}
    </tbody>
</table>
